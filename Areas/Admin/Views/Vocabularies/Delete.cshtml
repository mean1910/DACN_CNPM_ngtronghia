@model elearning_b1.Models.Vocabulary

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1>Delete Vocabulary</h1>

<h4>Are you sure you want to delete this vocabulary?</h4>
<div>
    <h3>@Model.Word</h3>
    <p><strong>Meaning:</strong> @Model.Meaning</p>
    <p><strong>Pronunciation:</strong> @Model.Pronunciation</p>
    <p><strong>Example Sentence:</strong> @Model.ExampleSentence</p>
    <p><strong>Part of Speech:</strong> @Model.PartOfSpeech</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="VocabularyID" />
    <input type="hidden" asp-for="TopicID" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-route-topicId="@ViewData["TopicID"]" class="btn btn-secondary">Cancel</a>
    </div>
</form>
