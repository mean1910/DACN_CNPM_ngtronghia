@model elearning_b1.Models.Vocabulary

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Vocabulary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VocabularyID" />
            <div class="form-group">
                <label asp-for="Word" class="control-label"></label>
                <input asp-for="Word" class="form-control" />
                <span asp-validation-for="Word" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meaning" class="control-label"></label>
                <input asp-for="Meaning" class="form-control" />
                <span asp-validation-for="Meaning" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pronunciation" class="control-label"></label>
                <input asp-for="Pronunciation" class="form-control" />
                <span asp-validation-for="Pronunciation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExampleSentence" class="control-label"></label>
                <input asp-for="ExampleSentence" class="form-control" />
                <span asp-validation-for="ExampleSentence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartOfSpeech" class="control-label"></label>
                @Html.DropDownListFor(model => model.PartOfSpeech, (SelectList)ViewBag.PartOfSpeechList, "Chọn loại từ", new { @class = "form-control" })
                <span asp-validation-for="PartOfSpeech" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicID" class="control-label"></label>
                <select asp-for="TopicID" class="form-control" asp-items="ViewBag.TopicID"></select>
                <span asp-validation-for="TopicID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

