@model elearning_b1.Models.Listening

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Listening</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Transcript</dt>
        <dd class="col-sm-10">@Model.Transcript</dd>

        <dt class="col-sm-2">Audio</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AudioUrl ))
            {
                <a href="https://drive.google.com/uc?id=@Model.AudioUrl&export=download" target="_blank" class="btn btn-success">Download</a>
                <iframe src="https://drive.google.com/file/d/@Model.AudioUrl/preview" width="100%" height="100"></iframe>
            }
        </dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-primary">Back to List</a>