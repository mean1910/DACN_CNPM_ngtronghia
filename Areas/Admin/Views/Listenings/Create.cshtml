@model elearning_b1.Models.Listening

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create New Listening</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="audioFile">Audio File (Required)</label>
        <input type="file" id="audioFile" name="audioFile" class="form-control" required />
        <span asp-validation-for="AudioUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="imageFile">Image File (Optional)</label>
        <input type="file" id="imageFile" name="imageFile" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Transcript" class="control-label"></label>
        <textarea asp-for="Transcript" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Transcript" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>