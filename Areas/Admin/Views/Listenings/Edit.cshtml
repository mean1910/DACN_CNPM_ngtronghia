@model elearning_b1.Models.Listening

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>Edit</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Transcript" class="control-label"></label>
        <textarea asp-for="Transcript" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Transcript" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Replace Audio File</label>
        <input type="file" name="newAudioFile" class="form-control" />
        <small class="text-muted">Leave empty to keep the current file.</small>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>