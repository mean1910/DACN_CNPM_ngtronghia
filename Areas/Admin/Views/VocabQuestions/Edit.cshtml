@model elearning_b1.Models.VocabQuestion

@{
    ViewData["Title"] = "Edit Vocab Question";
}

<h1>Edit Question for Topic: @ViewBag.TopicName</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TopicId" value="@ViewBag.TopicId" />
    <div class="form-group">
        <label>Topic</label>
        <input type="text" class="form-control" value="@ViewBag.TopicName" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-topicId="@ViewBag.TopicId" class="btn btn-secondary">Back to List</a>
</form>
