@model IEnumerable<elearning_b1.Models.Topic>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Topics</h1>
<a asp-action="Create" class="btn btn-primary">Create New Topic</a>

<table class="table">
    <thead>
        <tr>
            <th>Topic Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TopicName</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.TopicName" style="max-width: 100px; height: auto;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TopicID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.TopicID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
