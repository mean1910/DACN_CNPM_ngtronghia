@using Azure.Core
@model IEnumerable<elearning_b1.Models.Grammar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h1 class="text-center">Grammar Lessons</h1>

    <!-- Form tìm kiếm -->
    <form method="get" asp-action="Index" class="form-inline my-4">
        <input type="text" name="query" class="form-control mr-2" placeholder="Search by title"
               value="@Context.Request.Query["query"]" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Clear</a>
    </form>

    <!-- Hiển thị danh sách bài học -->
    <table class="table table-striped table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>
                        <a asp-action="View" asp-route-id="@item.Id" class="btn btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <p class="text-center text-danger">No lessons found.</p>
    }
</div>