@model elearning_b1.Models.Grammar

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h2 class="display-4 text-primary">@Model.Title</h2>

    </div>

    <!-- Nội dung bài học -->
    <div class="card shadow-sm p-4 mb-4">
        @Html.Raw(Model.Content)
    </div>

    <!-- Nút hành động -->
    <div class="d-flex justify-content-center gap-3">
        <a asp-action="Exercise" asp-route-id="@Model.Id" class="btn btn-success btn-lg">Bắt đầu bài tập</a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Quay lại danh sách</a>
    </div>
</div>

